@model MOM.Models.DepartmentModel

@{
    ViewData["Title"] = "Add New Department";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-0">
                    <div class="px-5 py-5 bg-white">
                        <div class="mb-4">
                            <h2 class="fw-bold mb-1 text-dark">New Department</h2>
                            <p class="text-muted small">Create a space for a new team.</p>
                        </div>

                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                            <div class="mb-4">
                                <label class="form-label small fw-bold text-uppercase text-muted">Department Name</label>
                                <div class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
                                    <span class="input-group-text border-0 bg-light pe-0"><i class="bi bi-building text-secondary"></i></span>
                                    <input asp-for="DepartmentName" class="form-control border-0 bg-light fs-6 fw-bold text-dark ps-3" placeholder="e.g. Marketing" />
                                </div>
                                <span asp-validation-for="DepartmentName" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="d-grid mt-5">
                                <button type="submit" class="btn btn-primary btn-lg rounded-3 fw-bold border-0 shadow-sm" style="background-color: #4DA8DA;">
                                    Create Department
                                </button>
                                <a asp-action="Index" class="btn btn-link text-muted btn-sm mt-3 text-decoration-none">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
