@model IEnumerable<MOM.Models.DepartmentModel>

@{
    ViewData["Title"] = "Departments";
}

<style>
    .pagination .page-link {
        color: black;
    }
    .pagination .page-item.active .page-link {
        background-color: #4DA8DA;
        border-color: #4DA8DA;
        color: #fff;
    }
    .pagination .page-link:hover {
        color: #3b8cc4;
        background-color: #e9ecef;
    }
    
    .dept-card {
        background: white;
        border: 1px solid #eee;
        border-radius: 16px;
        transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
        position: relative;
        overflow: hidden;
    }

    .dept-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        border-color: transparent;
    }

    .dept-bar {
        position: absolute;
        bottom: 0px;
        left: 0;
        height: 6px;
        width: 100%;
        background: #4DA8DA;
    }

    .dept-search-input {
        background: #f8f9fa;
        border: 2px solid transparent;
        transition: all 0.2s;
    }

    .dept-search-input:focus {
        background: white;
        border-color: #4DA8DA;
        box-shadow: none;
    }
</style>

@if (TempData["Error"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show container-fluid mt-3" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show container-fluid mt-3" role="alert">
        <i class="bi bi-check-circle me-1"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container-fluid py-5">
    
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5">
        <div>
            <h1 class="fw-bold text-dark">Departments</h1>
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Home</a></li>
                    <li class="breadcrumb-item active">Administration</li>
                    <li class="breadcrumb-item active text-primary">Departments</li>
                </ol>
            </nav>
        </div>
        <div class="mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-primary shadow-sm px-4 rounded-pill py-2" style="background-color: #4DA8DA; border: none;">
                <i class="bi bi-plus-lg me-2"></i>Create Department
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-pill overflow-hidden">
                <div class="card-body p-1 ps-4">
                    <form asp-action="Index" method="get" class="d-flex align-items-center">
                        <i class="bi bi-search text-muted me-3"></i>
                        <input type="text" name="SearchText" class="form-control border-0 shadow-none" placeholder="Search departments..." value="@ViewBag.CurrentSearchText" style="height: 50px;">
                        <button type="submit" class="btn btn-primary rounded-pill px-5 m-1 fw-bold" style="background-color: #4DA8DA; border: none; height: 46px;">Search</button>
                    </form>
                </div>
            </div>
             <div class="text-center mt-2">
                <small class="text-muted">Found @ViewBag.TotalRecords entries</small>
            </div>
        </div>
    </div>

    <!-- Departments Grid -->
    <div class="row g-4">
        @if (Model.Any())
        {
            @foreach (var d in Model)
            {
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="dept-card h-100 p-4 d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                             <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="bi bi-building text-dark fs-4"></i>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots fs-4"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                    <li><a class="dropdown-item py-2" asp-action="Details" asp-route-id="@d.DepartmentID"><i class="bi bi-eye me-2 text-primary"></i> View Details</a></li>
                                    <li><a class="dropdown-item py-2" asp-action="Update" asp-route-id="@d.DepartmentID"><i class="bi bi-pencil me-2 text-success"></i> Update</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item py-2 text-danger" asp-action="Delete" asp-route-id="@d.DepartmentID" onclick="return confirm('Confirm delete?');"><i class="bi bi-trash me-2"></i> Delete</a></li>
                                </ul>
                            </div>
                        </div>

                        <h4 class="fw-bold mb-1">@d.DepartmentName</h4>

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="badge bg-success text-white border px-3 rounded-pill fw-medium">Active</span>
                            <a asp-action="Update" asp-route-id="@d.DepartmentID" class="btn btn-sm btn-light rounded-circle" style="width: 32px; height: 32px; padding: 0; display: inline-flex; align-items: center; justify-content: center;">
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                         
                        <div class="dept-bar"></div>
                    </div>
                </div>
            }
        }
        else
        {
             <div class="col-12 text-center py-5">
                <i class="bi bi-diagram-3 text-muted display-1 opacity-25"></i>
                <h3 class="text-muted mt-3">No Departments Found</h3>
                <p class="text-muted">Try a different search term or add a new department.</p>
            </div>
        }
    </div>

    <!-- Pagination Footer -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-5">
            <nav>
                <ul class="pagination pagination-md">
                     <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0 bg-transparent" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-SearchText="@ViewBag.CurrentSearchText">Previous</a>
                    </li>
                     @for (int p = 1; p <= ViewBag.TotalPages; p++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == p ? "active" : "")">
                             <a class="page-link rounded-circle mx-1 border-0 shadow-sm d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;" asp-action="Index" asp-route-page="@p" asp-route-SearchText="@ViewBag.CurrentSearchText">@p</a>
                        </li>
                    }
                     <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link border-0 bg-transparent" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-SearchText="@ViewBag.CurrentSearchText">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }

</div>

