@model IEnumerable<MOM.Models.MeetingTypeModel>

@{
    ViewData["Title"] = "Meeting Types";
}

<div class="pagetitle mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Meeting Types</h1>
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Master Data</li>
                    <li class="breadcrumb-item active">Meeting Types</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Add Meeting Type
            </a>
        </div>
    </div>
</div>

<!-- Search & Filters -->
<div class="card mb-4 shadow-sm border-0">
    <div class="card-header text-white" style="background-color: #6366f1;">
        <i class="bi bi-funnel me-2"></i> Search
    </div>
    <div class="card-body py-4">
        <form class="row g-3">
             <div class="col-md-10">
                <label class="form-label small text-muted fw-bold">Search Meeting Type</label>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search by name...">
                    <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                </div>
            </div>
             <div class="col-md-2 d-flex align-items-end">
                <button type="button" class="btn btn-primary w-100" style="background-color: #4f46e5;">
                    <i class="bi bi-search me-1"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header text-white" style="background-color: #6366f1;">
        <i class="bi bi-tags me-2"></i> Meeting Types List
    </div>
    <div class="card-body p-0">
         <div class="table-responsive">
            <table class="table table-hover table-large-font align-middle mb-0">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                         <th class="ps-4">#</th>
                        <th class="text-nowrap">Meeting Type Name</th>
                        <th>Remarks</th>
                        <th class="text-end pe-4 text-nowrap">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @if (Model != null && Model.Any())
                    {
                        int i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-muted">@i</td>
                                <td class="fw-bold text-dark text-nowrap">@item.MeetingTypeName</td>
                                <td class="text-muted">@item.Remarks</td>
                                <td class="text-end pe-4 text-nowrap">
                                    <a asp-action="Update" asp-route-id="@item.MeetingTypeID" class="btn btn-light btn-sm text-success" title="Edit">
                                        <i class="bi bi-pencil-square fs-5"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MeetingTypeID" class="btn btn-light btn-sm text-danger ms-2" title="Delete" onclick="return confirm('Are you sure you want to delete this Meeting Type?');">
                                        <i class="bi bi-trash fs-5"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No Meeting Types Found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
