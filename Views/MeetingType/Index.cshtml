@model IEnumerable<MOM.Models.MeetingTypeModel>

@{
    ViewData["Title"] = "Meeting Types";
}

<style>
    .pagination .page-link {
        color: black;
    }
    .pagination .page-item.active .page-link {
        background-color: #4DA8DA;
        border-color: #4DA8DA;
        color: #fff;
    }
    .pagination .page-link:hover {
        color: #3b8cc4;
        background-color: #e9ecef;
    }

    .meeting-type-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-top: 5px solid #4DA8DA;
        background: #fff;
    }

    .meeting-type-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important;
        border-top-color: #2c88ba;
    }

    .icon-box {
        width: 50px;
        height: 50px;
        background-color: #edf7fc;
        color: #4DA8DA;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.4rem;
    }
</style>

<div class="container-fluid py-4">

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-1"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle me-1"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header Section -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5">
        <div>
            <h1 class="fw-bold text-dark">Meeting Types</h1>
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Home</a></li>
                    <li class="breadcrumb-item active">Administration</li>
                    <li class="breadcrumb-item active text-primary">Meeting Types</li>
                </ol>
            </nav>
        </div>
        <div class="mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-primary shadow-sm px-4 rounded-pill py-2" style="background-color: #4DA8DA; border: none;">
                <i class="bi bi-plus-lg me-2"></i>Create Type
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-pill overflow-hidden">
                <div class="card-body p-1 ps-4">
                    <form asp-action="Index" method="get" class="d-flex align-items-center">
                        <i class="bi bi-search text-muted me-3"></i>
                        <input type="text" name="SearchText" class="form-control border-0 shadow-none" placeholder="Search meeting types..." value="@ViewBag.CurrentSearchText" style="height: 50px;">
                        <button type="submit" class="btn btn-primary rounded-pill px-5 m-1 fw-bold" style="background-color: #4DA8DA; border: none; height: 46px;">Search</button>
                    </form>
                </div>
            </div>
             <div class="text-center mt-2">
                <small class="text-muted">Found @ViewBag.TotalRecords meeting types</small>
            </div>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-xl-4">
                    <div class="card meeting-type-card h-100 shadow-sm rounded-4 p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="icon-box">
                                <i class="bi bi-tags-fill"></i>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots fs-4"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                    <li><a class="dropdown-item py-2" asp-action="Details" asp-route-id="@item.MeetingTypeID"><i class="bi bi-eye me-2 text-primary"></i> View Details</a></li>
                                    <li><a class="dropdown-item py-2" asp-action="Update" asp-route-id="@item.MeetingTypeID"><i class="bi bi-pencil me-2 text-success"></i> Update</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item py-2 text-danger" asp-action="Delete" asp-route-id="@item.MeetingTypeID" onclick="return confirm('Confirm delete?');"><i class="bi bi-trash me-2"></i> Delete</a></li>
                                </ul>
                            </div>
                        </div>

                        <h4 class="fw-bold text-dark mb-2">@item.MeetingTypeName</h4>
                        <p class="text-muted small flex-grow-1">
                            @(string.IsNullOrEmpty(item.Remarks) ? "No remarks added for this meeting type." : item.Remarks)
                        </p>

                        <div class="d-flex align-items-center justify-content-center mt-3 pt-3 border-top text-muted small w-100">
                            <i class="bi bi-clock me-1"></i> Updated Recently
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
             <div class="col-12 text-center py-5">
                <i class="bi bi-inbox text-muted display-1 opacity-25"></i>
                <p class="text-muted mt-3">No meeting types found matching your query.</p>
            </div>
        }
    </div>

   @if (ViewBag.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-5">
            <nav>
                <ul class="pagination pagination-md">
                     <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0 bg-transparent" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-SearchText="@ViewBag.CurrentSearchText">Previous</a>
                    </li>
                     @for (int p = 1; p <= ViewBag.TotalPages; p++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == p ? "active" : "")">
                             <a class="page-link rounded-circle mx-1 border-0 shadow-sm d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;" asp-action="Index" asp-route-page="@p" asp-route-SearchText="@ViewBag.CurrentSearchText">@p</a>
                        </li>
                    }
                     <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link border-0 bg-transparent" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-SearchText="@ViewBag.CurrentSearchText">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }

</div>

