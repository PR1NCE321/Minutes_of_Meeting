@model MOM.Models.MeetingTypeModel

@{
    ViewData["Title"] = "Add New Meeting Type";
}

<div class="pagetitle mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Add New Meeting Type</h1>
             <p class="text-muted small">Define a new category for meetings</p>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
             <div class="card-header text-white py-3" style="background: linear-gradient(to right, #6366f1, #818cf8);">
                <h5 class="mb-0"><i class="bi bi-tags me-2"></i> Add New Meeting Type</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row g-4">
                         <!-- Meeting Type Name -->
                        <div class="col-12">
                            <label asp-for="MeetingTypeName" class="form-label fw-semibold">Meeting Type Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-tag text-muted"></i></span>
                                 <input asp-for="MeetingTypeName" class="form-control" placeholder="Enter meeting type name" />
                            </div>
                             <div class="form-text small text-muted">e.g. Board Meeting, Staff Meeting, Client Call</div>
                            <span asp-validation-for="MeetingTypeName" class="text-danger small"></span>
                        </div>

                         <!-- Remarks -->
                        <div class="col-12">
                            <label asp-for="Remarks" class="form-label fw-semibold">Remarks</label>
                             <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-chat-text text-muted"></i></span>
                                <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="Enter any additional remarks (optional)"></textarea>
                            </div>
                            <span asp-validation-for="Remarks" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end align-items-center mt-4 pt-2 border-top">
                        <a asp-action="Index" class="text-decoration-none text-muted me-3">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary px-4" style="background-color: #4f46e5;">
                            <i class="bi bi-check-circle me-1"></i> Create Meeting Type
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
