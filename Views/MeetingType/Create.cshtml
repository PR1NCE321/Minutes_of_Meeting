@model MOM.Models.MeetingTypeModel

@{
    ViewData["Title"] = "Add New Meeting Type";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-5">
                    
                    <div class="text-center mb-5">
                         <div class="d-inline-flex align-items-center justify-content-center bg-light rounded-circle shadow-sm mb-4" style="width: 72px; height: 72px; color: #4DA8DA;">
                            <i class="bi bi-plus-lg fs-2"></i>
                        </div>
                        <h2 class="fw-bold text-dark">Create Meeting Type</h2>
                         <p class="text-muted">Define a new category for your organization's meetings.</p>
                    </div>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="MeetingTypeName" class="form-control rounded-3 bg-light border-light" id="floatingInputName" placeholder="Name">
                            <label for="floatingInputName" class="text-muted">Type Name (e.g. Daily Standup)</label>
                            <span asp-validation-for="MeetingTypeName" class="text-danger small ms-2"></span>
                        </div>

                        <div class="form-floating mb-5">
                            <textarea asp-for="Remarks" class="form-control rounded-3 bg-light border-light" placeholder="Remarks" id="floatingTextarea" style="height: 100px"></textarea>
                            <label for="floatingTextarea" class="text-muted">Remarks (Optional)</label>
                            <span asp-validation-for="Remarks" class="text-danger small ms-2"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold py-3 shadow-md" style="background-color: #4DA8DA; border: none; transition: transform 0.2s;">
                                Create Type
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted mt-3 text-decoration-none small">
                                <i class="bi bi-arrow-left me-1"></i> Return to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

