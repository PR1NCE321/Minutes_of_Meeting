@model IEnumerable<MOM.Models.MeetingListVM>

@{
    ViewData["Title"] = "Meetings";
}

<style>
    .pagination .page-link {
        color: black;
    }
    .pagination .page-item.active .page-link {
        background-color: #4DA8DA;
        border-color: #4DA8DA;
        color: #fff;
    }
    .pagination .page-link:hover {
        color: #3b8cc4;
        background-color: #e9ecef;
    }
    .pagination .page-link:hover {
        color: #3b8cc4;
        background-color: #e9ecef;
    }
</style>

@if (TempData["Error"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show container-fluid mt-3" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show container-fluid mt-3" role="alert">
        <i class="bi bi-check-circle me-1"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="pagetitle mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Meetings Management</h1>
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Meetings Management</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Schedule Meeting
            </a>
            <button class="btn btn-success ms-2">
                <i class="bi bi-file-earmark-excel me-1"></i> Export
            </button>
        </div>
    </div>
</div>


<div class="card mb-4 shadow-sm border-0">
    <div class="card-header text-white" style="background-color: #4DA8DA;">
        <i class="bi bi-funnel me-2"></i> Search & Filters
    </div>
    <div class="card-body py-4">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label small text-muted fw-bold">Meeting Type</label>
                <select name="MeetingTypeID" class="form-select" asp-items="@(new SelectList(ViewBag.MeetingTypeList, "MeetingTypeID", "MeetingTypeName", ViewBag.CurrentMeetingTypeID))">
                    <option value="">All Types</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted fw-bold">Department</label>
                <select name="DepartmentID" class="form-select" asp-items="@(new SelectList(ViewBag.DepartmentList, "DepartmentID", "DepartmentName", ViewBag.CurrentDepartmentID))">
                    <option value="">All Departments</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted fw-bold">Venue</label>
                <select name="MeetingVenueID" class="form-select" asp-items="@(new SelectList(ViewBag.MeetingVenueList, "MeetingVenueID", "MeetingVenueName", ViewBag.CurrentMeetingVenueID))">
                    <option value="">All Venues</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted fw-bold">Search</label>
                <div class="input-group">
                    <input type="text" name="SearchText" class="form-control" placeholder="Search meetings..." value="@ViewBag.CurrentSearchText">
                    <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                </div>
            </div>
            
            <div class="col-md-3">
                <label class="form-label small text-muted fw-bold">Start Date</label>
                <input type="date" name="StartDate" class="form-control" value="@ViewBag.CurrentStartDate">
            </div>
             <div class="col-md-3">
                <label class="form-label small text-muted fw-bold">End Date</label>
                <input type="date" name="EndDate" class="form-control" value="@ViewBag.CurrentEndDate">
            </div>
             <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2" style="background-color: #4DA8DA;">
                    <i class="bi bi-funnel-fill me-1"></i> Apply Filters
                </button>
                 <a asp-action="Index" class="btn btn-light text-muted border">
                    <i class="bi bi-x-circle me-1"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>


<div class="card shadow-sm border-0">
    <div class="card-header text-white d-flex align-items-center" style="background-color: #4DA8DA;">
        <i class="bi bi-calendar-week me-2"></i> Scheduled Meetings
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-sm align-middle mb-0">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                        <th class="ps-3">#</th>
                        <th class="text-nowrap">Date & Time</th>
                        <th class="text-nowrap">Type</th> 
                        <th>Description</th>
                        <th class="text-nowrap">Dept.</th> 
                        <th class="text-nowrap">Venue</th>
                        <th>Status</th>
                        <th class="text-end pe-3 text-nowrap">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @{
                        int i = ((ViewBag.CurrentPage ?? 1) - 1) * (ViewBag.PageSize ?? 10);
                    }
                    @foreach (var m in Model)
                    {
                        i++;
                        <tr>
                            <td class="ps-3 text-muted">@i</td>
                            <td class="text-nowrap">
                                <div class="fw-bold text-dark">@m.MeetingDate.ToString("dd MMM yyyy")</div>
                                <div class="small text-muted">@m.MeetingDate.ToString("HH:mm")</div>
                            </td>
                            <td>
                                <span class="badge rounded-pill bg-info text-dark bg-opacity-10 border border-info border-opacity-25 text-info text-nowrap">
                                    @m.MeetingTypeName
                                </span>
                            </td>
                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 150px;" title="@m.MeetingDescription">
                                    @(m.MeetingDescription ?? "-")
                                </span>
                            </td>
                            <td class="text-nowrap">@m.DepartmentName</td>
                             <td class="text-nowrap">@m.MeetingVenueName</td>
                            <td>
                                @if (m.IsCancelled)
                                {
                                    <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25">Cancelled</span>
                                }
                                else
                                {
                                     <span class="badge rounded-pill bg-success bg-opacity-10 text-black border border-success border-opacity-25">Scheduled</span>
                                }
                            </td>
                            <td class="text-end pe-3 text-nowrap">
                                <a asp-action="Details" asp-route-id="@m.MeetingID" class="btn btn-sm btn-light text-primary" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                 <a asp-action="Delete" asp-route-id="@m.MeetingID" class="btn btn-sm btn-light text-danger ms-1" title="Delete" onclick="return confirm('Confirm?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-white py-3 border-top-0 d-flex justify-content-between align-items-center">
        <div class="small text-black">Showing @Model.Count() of @ViewBag.TotalRecords entries</div>
        
        @if (ViewBag.TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                           asp-route-MeetingTypeID="@ViewBag.CurrentMeetingTypeID"
                           asp-route-DepartmentID="@ViewBag.CurrentDepartmentID"
                           asp-route-MeetingVenueID="@ViewBag.CurrentMeetingVenueID"
                           asp-route-StartDate="@ViewBag.CurrentStartDate"
                           asp-route-EndDate="@ViewBag.CurrentEndDate"
                           asp-route-SearchText="@ViewBag.CurrentSearchText">Previous</a>
                    </li>

                    @for (int p = 1; p <= ViewBag.TotalPages; p++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == p ? "active" : "")">
                             <a class="page-link" asp-action="Index" 
                               asp-route-page="@p"
                               asp-route-MeetingTypeID="@ViewBag.CurrentMeetingTypeID"
                               asp-route-DepartmentID="@ViewBag.CurrentDepartmentID"
                               asp-route-MeetingVenueID="@ViewBag.CurrentMeetingVenueID"
                               asp-route-StartDate="@ViewBag.CurrentStartDate"
                               asp-route-EndDate="@ViewBag.CurrentEndDate"
                               asp-route-SearchText="@ViewBag.CurrentSearchText">@p</a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                           asp-route-MeetingTypeID="@ViewBag.CurrentMeetingTypeID"
                           asp-route-DepartmentID="@ViewBag.CurrentDepartmentID"
                           asp-route-MeetingVenueID="@ViewBag.CurrentMeetingVenueID"
                           asp-route-StartDate="@ViewBag.CurrentStartDate"
                           asp-route-EndDate="@ViewBag.CurrentEndDate"
                           asp-route-SearchText="@ViewBag.CurrentSearchText">Next</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

