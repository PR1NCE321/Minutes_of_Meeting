@model MOM.Models.MeetingMemberModel

@{
    ViewData["Title"] = "Add Meeting Member";
}

<div class="pagetitle mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Add Meeting Participant</h1>
             <p class="text-muted small">Record attendance and remarks for a meeting</p>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
             <div class="card-header text-white py-3" style="background: linear-gradient(to right, #6366f1, #818cf8);">
                <h5 class="mb-0"><i class="bi bi-person-check me-2"></i> Add Participant</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row g-4">
                        <!-- Meeting -->
                        <div class="col-12">
                            <label asp-for="MeetingID" class="form-label fw-semibold">Meeting Context</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-calendar-event text-muted"></i></span>
                                <select asp-for="MeetingID" class="form-select" asp-items="@(new SelectList(ViewBag.MeetingList, "MeetingID", "DisplayName"))">
                                    <option value="">-- Select Meeting --</option>
                                </select>
                            </div>
                            <span asp-validation-for="MeetingID" class="text-danger small"></span>
                        </div>

                        <!-- Staff Member -->
                        <div class="col-12">
                             <label asp-for="StaffID" class="form-label fw-semibold">Staff Member</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-person text-muted"></i></span>
                                <select asp-for="StaffID" class="form-select" asp-items="@(new SelectList(ViewBag.StaffList, "StaffID", "StaffName"))">
                                    <option value="">-- Select Staff --</option>
                                </select>
                            </div>
                            <span asp-validation-for="StaffID" class="text-danger small"></span>
                        </div>

                         <!-- Attendance Status -->
                        <div class="col-12">
                             <label asp-for="IsPresent" class="form-label fw-semibold">Attendance Status</label>
                             <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-check-circle text-muted"></i></span>
                                 <select asp-for="IsPresent" class="form-select">
                                    <option value="true">Present</option>
                                    <option value="false">Absent</option>
                                </select>
                            </div>
                        </div>

                         <!-- Remarks -->
                        <div class="col-12">
                            <label asp-for="Remarks" class="form-label fw-semibold">Remarks</label>
                            <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="Enter any specific remarks..."></textarea>
                            <span asp-validation-for="Remarks" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end align-items-center mt-4 pt-2 border-top">
                        <a asp-action="Index" class="text-decoration-none text-muted me-3">
                            <i class="bi bi-arrow-left me-1"></i> Back
                        </a>
                        <button type="submit" class="btn btn-primary px-4" style="background-color: #4f46e5;">
                            <i class="bi bi-check-circle me-1"></i> Save Record
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
