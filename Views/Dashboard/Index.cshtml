@model MOM.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<style>
    :root {
        --saas-primary: #4DA8DA;
        --saas-secondary: #80D8C3;
        --saas-bg: #F5F5F5;
        --saas-card-bg: #ffffff;
    }

    .saas-card {
        background: var(--saas-card-bg);
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .saas-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.04);
        border-color: #cbd5e1;
    }

    .icon-box {
        width: 48px;
        height: 48px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .icon-box-primary { background-color: #e6f6fd; color: #4DA8DA; } 
    .icon-box-success { background-color: #e6fcf8; color: #80D8C3; } 
    .icon-box-warning { background-color: #FFF7DB; color: #D1AE45; } 
    .icon-box-danger  { background-color: #fef2f2; color: #ef4444; } 

    .metric-label {
        color: #64748b;
        font-size: 0.875rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
    }

    .metric-value {
        color: #0f172a;
        font-size: 2.25rem;
        font-weight: 700;
        line-height: 1.1;
    }

    .metric-sub {
        font-size: 0.8rem;
        color: #94a3b8;
        margin-top: 0.5rem;
        display: block;
    }

    .action-btn-modern {
        display: flex;
        align-items: center;
        padding: 1rem;
        border-radius: 8px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        color: #334155;
        text-decoration: none;
        transition: all 0.2s;
    }

    .action-btn-modern:hover {
        background: #ffffff;
        border-color: #cbd5e1;
        color: #0f172a;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    }
</style>

<div class="container-fluid py-4">

    
    <div class="row align-items-center mb-5">
        <div class="col-md-8">
            <h1 class="fw-bold text-dark mb-1">Overview</h1>
            <p class="text-secondary mb-0">Track your organization's meeting metrics and performance.</p>
        </div>
    </div>

    
    <div class="row g-4 mb-5">
        
        
        <div class="col-xl-3 col-sm-6">
            <div class="saas-card h-100 p-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="icon-box icon-box-primary">
                        <i class="bi bi-calendar4-event"></i>
                    </div>
                     <span class="badge bg-info bg-opacity-10 text-info rounded-pill px-2">Live</span>
                </div>
                <div class="metric-value">@Model.TotalMeetings</div>
                <div class="metric-label">Total Meetings</div>
                <span class="metric-sub">Scheduled across all depts</span>
            </div>
        </div>

        
        <div class="col-xl-3 col-sm-6">
            <div class="saas-card h-100 p-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="icon-box icon-box-success">
                        <i class="bi bi-layers"></i>
                    </div>
                </div>
                <div class="metric-value">@Model.TotalMeetingTypes</div>
                <div class="metric-label">Meeting Types</div>
                <span class="metric-sub">Active categories defined</span>
            </div>
        </div>

        
        <div class="col-xl-3 col-sm-6">
            <div class="saas-card h-100 p-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="icon-box icon-box-warning">
                        <i class="bi bi-person-video2"></i>
                    </div>
                </div>
                <div class="metric-value">@Model.TotalDepartments</div>
                <div class="metric-label">Departments</div>
                <span class="metric-sub">Participating units</span>
            </div>
        </div>

        
        <div class="col-xl-3 col-sm-6">
            <div class="saas-card h-100 p-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="icon-box icon-box-danger">
                        <i class="bi bi-slash-circle"></i>
                    </div>
                     @if(Model.CancelledMeetings > 0) {
                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-2">High Attention</span>
                     }
                </div>
                <div class="metric-value">@Model.CancelledMeetings</div>
                <div class="metric-label">Cancelled</div>
                <span class="metric-sub">Meetings stopped or voided</span>
            </div>
        </div>

    </div>

    
    <!-- Main Charts Row -->
    <div class="row g-4 mb-4">
        
        <!-- Monthly Trends Line Chart -->
        <div class="col-lg-8">
            <div class="saas-card p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h5 class="fw-bold mb-0">Meeting Analytics</h5>
                        <p class="text-secondary small mb-0">Monthly meeting volume (Last 6 Months)</p>
                    </div>
                </div>
                <div style="position: relative; height: 320px; width: 100%;">
                    <canvas id="trendsChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Quick Actions (Keep existing) -->
        <div class="col-lg-4">
            <div class="saas-card p-4 h-100">
                <h5 class="fw-bold mb-3">Quick Actions</h5>
                
                <div class="d-flex flex-column gap-3">
                    <a asp-controller="Meetings" asp-action="Create" class="action-btn-modern">
                        <i class="bi bi-plus-lg me-3 text-primary fs-5"></i>
                        <div>
                            <div class="fw-bold">New Meeting</div>
                            <small class="text-secondary">Schedule and notify team</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto text-muted"></i>
                    </a>

                    <a asp-controller="Staff" asp-action="Create" class="action-btn-modern">
                        <i class="bi bi-person-plus me-3 text-success fs-5"></i>
                        <div>
                            <div class="fw-bold">Add Staff</div>
                            <small class="text-secondary">Onboard new member</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto text-muted"></i>
                    </a>

                    <a asp-controller="Department" asp-action="Create" class="action-btn-modern">
                        <i class="bi bi-building-add me-3 text-warning fs-5"></i>
                        <div>
                            <div class="fw-bold">Add Department</div>
                            <small class="text-secondary">Create new unit</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto text-muted"></i>
                    </a>
                </div>

                <div class="mt-4 pt-3 border-top">
                     <p class="small text-muted mb-0">
                         Create records quickly to keep your organization up to date.
                     </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Secondary Charts Row -->
    <div class="row g-4 mb-4">
        
        <!-- Departments Doughnut -->
        <div class="col-md-6">
            <div class="saas-card p-4 h-100">
                <h6 class="fw-bold text-dark mb-3">Meetings by Department</h6>
                <div style="height: 250px; display: flex; justify-content: center;">
                    <canvas id="deptChart"></canvas>
                </div>
            </div>
        </div>

         <!-- Meeting Types Bar -->
        <div class="col-md-6">
            <div class="saas-card p-4 h-100">
                <h6 class="fw-bold text-dark mb-3">Meetings by Type</h6>
                 <div style="height: 250px;">
                    <canvas id="typeChart"></canvas>
                </div>
            </div>
        </div>

    </div>

    <!-- Tertiary Charts Row (New) -->
    <div class="row g-4">
        
        <!-- Venue Utilization -->
        <div class="col-md-5">
            <div class="saas-card p-4 h-100">
                <h6 class="fw-bold text-dark mb-3">Top Venues</h6>
                 <div style="height: 250px; display: flex; justify-content: center;">
                    <canvas id="venueChart"></canvas>
                </div>
            </div>
        </div>

         <!-- Top Staff Contributors -->
        <div class="col-md-7">
            <div class="saas-card p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="fw-bold text-dark mb-0">Most Active Staff</h6>
                    <span class="badge bg-light text-secondary border">Participation Count</span>
                </div>
                 <div style="height: 250px;">
                    <canvas id="staffChart"></canvas>
                </div>
            </div>
        </div>

    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        
        // --- 1. Monthly Trends Chart ---
        const trendsCtx = document.getElementById('trendsChart').getContext('2d');
        const monthLabels = @Html.Raw(Json.Serialize(Model.MonthLabels));
        const monthCounts = @Html.Raw(Json.Serialize(Model.MonthlyCounts));

        new Chart(trendsCtx, {
            type: 'line',
            data: {
                labels: monthLabels.length > 0 ? monthLabels : ['No Data'],
                datasets: [{
                    label: 'Meetings',
                    data: monthCounts.length > 0 ? monthCounts : [0],
                    borderColor: '#4DA8DA',
                    backgroundColor: 'rgba(77, 168, 218, 0.1)',
                    tension: 0.4,
                    fill: true,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                         beginAtZero: true,
                         grid: { borderDash: [2, 2] },
                         ticks: { precision: 0 }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // --- 2. Departments Doughnut Chart ---
        const deptCtx = document.getElementById('deptChart').getContext('2d');
        const deptNames = @Html.Raw(Json.Serialize(Model.DepartmentNames));
        const deptCounts = @Html.Raw(Json.Serialize(Model.DepartmentCounts));
        const hasDeptData = deptNames.length > 0;
        
        new Chart(deptCtx, {
            type: 'doughnut',
            data: {
                labels: hasDeptData ? deptNames : ['No Data'],
                datasets: [{
                    data: hasDeptData ? deptCounts : [1],
                    backgroundColor: [
                        '#4DA8DA', '#80D8C3', '#FFD166', '#EF476F', '#118AB2', '#073B4C'
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'right', labels: { boxWidth: 12 } }
                },
                cutout: '70%'
            }
        });

         // --- 3. Meeting Types Bar Chart ---
        const typeCtx = document.getElementById('typeChart').getContext('2d');
        const typeNames = @Html.Raw(Json.Serialize(Model.MeetingTypeNames));
        const typeCounts = @Html.Raw(Json.Serialize(Model.MeetingTypeCounts));
        const hasTypeData = typeNames.length > 0;

        new Chart(typeCtx, {
            type: 'bar',
            data: {
                labels: hasTypeData ? typeNames : ['No Data'],
                datasets: [{
                    label: 'Count',
                    data: hasTypeData ? typeCounts : [0],
                    backgroundColor: '#80D8C3',
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                     y: {
                         beginAtZero: true,
                         ticks: { precision: 0 }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // --- 4. Venues Polar Area Chart (New) ---
        const venueCtx = document.getElementById('venueChart').getContext('2d');
        const venueNames = @Html.Raw(Json.Serialize(Model.VenueNames));
        const venueCounts = @Html.Raw(Json.Serialize(Model.VenueCounts));
        const hasVenueData = venueNames.length > 0;

        new Chart(venueCtx, {
            type: 'pie',
            data: {
                labels: hasVenueData ? venueNames : ['No Data'],
                datasets: [{
                    data: hasVenueData ? venueCounts : [1],
                    backgroundColor: [
                        '#4DA8DA', '#80D8C3', '#FFD166', '#EF476F', '#118AB2', '#073B4C'
                    ],
                    borderWidth: 2,
                    borderColor: '#ffffff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                 plugins: {
                    legend: { position: 'right', labels: { boxWidth: 12 } }
                }
            }
        });

        // --- 5. Active Staff Horizontal Bar Chart (New) ---
        const staffCtx = document.getElementById('staffChart').getContext('2d');
        const staffNames = @Html.Raw(Json.Serialize(Model.StaffNames));
        const staffCounts = @Html.Raw(Json.Serialize(Model.StaffCounts));
        const hasStaffData = staffNames.length > 0;

        new Chart(staffCtx, {
            type: 'bar',
            data: {
                labels: hasStaffData ? staffNames : ['No Data'],
                datasets: [{
                    label: 'Meetings Attended',
                    data: hasStaffData ? staffCounts : [0],
                    backgroundColor: '#118AB2',
                    borderRadius: 4,
                    barPercentage: 0.6
                }]
            },
            options: {
                indexAxis: 'y', // Horizontal bar
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                     x: {
                         beginAtZero: true,
                         ticks: { precision: 0 }
                    },
                    y: {
                        grid: { display: false }
                    }
                }
            }
        });

    });
</script>
