
            <!-- Meetings History Section -->
            <div class="card profile-card mb-3">
                <div class="card-header border-bottom-0 pt-4 px-4 pb-0 text-white" style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%); border-radius: 15px 15px 0 0;">
                    <h5 class="card-title text-white fw-bold mb-3"><i class="bi bi-calendar-week me-2"></i>Meetings History</h5>
                </div>
                <div class="card-body pt-4 px-4 pb-2">
                    @if (ViewBag.StaffMeetings != null)
                    {
                        var meetings = ViewBag.StaffMeetings as IEnumerable<MOM.Models.MeetingMemberModel>;
                        if (meetings != null && meetings.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Date</th>
                                            <th>Meeting Type</th>
                                            <th>Venue</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in meetings)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="fw-bold">@item.Meeting?.MeetingDate?.ToString("MMM dd, yyyy")</div>
                                                    <small class="text-muted">@item.Meeting?.MeetingDate?.ToString("hh:mm tt")</small>
                                                </td>
                                                <td><span class="badge bg-light text-dark border">@item.Meeting?.MeetingType?.MeetingTypeName</span></td>
                                                <td><i class="bi bi-geo-alt text-muted me-1"></i>@item.Meeting?.MeetingVenue?.MeetingVenueName</td>
                                                <td>
                                                    @if (item.IsPresent)
                                                    {
                                                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill"><i class="bi bi-check-circle me-1"></i>Present</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill"><i class="bi bi-x-circle me-1"></i>Absent</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a asp-controller="Meetings" asp-action="Details" asp-route-id="@item.MeetingID" class="btn btn-sm btn-outline-primary rounded-pill">
                                                        View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-calendar-x text-muted display-4 mb-3"></i>
                                <p class="text-muted">No meeting history found for this staff member.</p>
                            </div>
                        }
                    }
                </div>
            </div>
