@model MOM.Models.StaffModel

@{
    ViewData["Title"] = "Update Staff Member";
}

<div class="pagetitle mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Update Staff Member</h1>
             <p class="text-muted small">Update staff member details</p>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header text-white py-3" style="background: #4DA8DA;">
                <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Update Staff Member</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Update">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="StaffID" />
                    <input type="hidden" asp-for="Created" />

                    <div class="row g-4">
                        
                        <div class="col-md-6">
                            <label asp-for="StaffName" class="form-label fw-semibold">Staff Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-person text-muted"></i></span>
                                <input asp-for="StaffName" class="form-control" placeholder="Enter staff name" />
                            </div>
                            <span asp-validation-for="StaffName" class="text-danger small"></span>
                        </div>

                        
                        <div class="col-md-6">
                            <label asp-for="DepartmentID" class="form-label fw-semibold">Department</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-building text-muted"></i></span>
                                <select asp-for="DepartmentID" class="form-select" asp-items="@(new SelectList(ViewBag.DepartmentList, "DepartmentID", "DepartmentName"))">
                                    <option value="">-- Select Department --</option>
                                </select>
                            </div>
                            <span asp-validation-for="DepartmentID" class="text-danger small"></span>
                        </div>

                        
                        <div class="col-md-6">
                            <label asp-for="EmailAddress" class="form-label fw-semibold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-envelope text-muted"></i></span>
                                <input asp-for="EmailAddress" class="form-control" type="email" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="EmailAddress" class="text-danger small"></span>
                        </div>

                        
                        <div class="col-md-6">
                            <label asp-for="MobileNo" class="form-label fw-semibold">Mobile Number</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-telephone text-muted"></i></span>
                                <input asp-for="MobileNo" class="form-control" placeholder="Enter mobile number" />
                            </div>
                            <span asp-validation-for="MobileNo" class="text-danger small"></span>
                        </div>

                        
                        <div class="col-12">
                            <label asp-for="Remarks" class="form-label fw-semibold">Remarks (Optional)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-card-text text-muted"></i></span>
                                <textarea asp-for="Remarks" class="form-control" style="height: 100px" placeholder="Additional notes..."></textarea>
                            </div>
                            <span asp-validation-for="Remarks" class="text-danger small"></span>
                        </div>

                    </div>

                    <div class="d-flex justify-content-end align-items-center mt-4 pt-2 border-top">
                        <a asp-action="Index" class="text-decoration-none text-muted me-3">
                            <i class="bi bi-arrow-left me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary px-4" style="background-color: #4DA8DA;">
                            <i class="bi bi-save me-1"></i> Update Staff Member
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
