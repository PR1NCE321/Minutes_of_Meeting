@model MOM.Models.StaffModel

@{
    ViewData["Title"] = "Staff Details";
}

<style>
    .profile-card {
        transition: all 0.3s;
        border: none;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        font-size: 3.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
        border: 4px solid #fff;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .detail-row {
        padding: 12px 0;
        border-bottom: 1px solid #f0f2f5;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-icon {
        color: #764ba2; /* Matches gradient */
        background-color: #f4f6f8;
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-right: 10px;
    }

    .label-text {
        font-weight: 500;
        color: #6c757d;
        font-size: 0.95rem;
    }

    .value-text {
        font-weight: 600;
        color: #2c3e50;
    }
</style>

<div class="pagetitle mb-4">
    <h1 class="fw-bold text-dark">Staff Profile</h1>
    <nav>
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" class="text-decoration-none">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Staff" asp-action="Index" class="text-decoration-none">Staff</a></li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
    </nav>
</div>

<section class="section profile">
    <div class="row">
        <div class="col-xl-4 mb-4">
            <div class="card profile-card h-100">
                <div class="card-body profile-card pt-5 d-flex flex-column align-items-center">

                    <div class="rounded-circle text-white d-flex align-items-center justify-content-center mb-4 profile-avatar">
                        @if (!string.IsNullOrEmpty(Model.StaffName))
                        {
                            @Model.StaffName.Substring(0, 1).ToUpper()
                        }
                        else
                        {
                            <i class="bi bi-person"></i>
                        }
                    </div>

                    <h2 class="h3 fw-bold mb-1">@Model.StaffName</h2>
                    <span class="badge bg-light text-dark border mb-4">@Model.Department?.DepartmentName</span>

                    <div class="d-grid gap-2 col-10 mx-auto">
                        <a href="mailto:@Model.EmailAddress" class="btn btn-primary rounded-pill shadow-sm">
                            <i class="bi bi-envelope me-2"></i> Send Email
                        </a>
                        <a href="tel:@Model.MobileNo" class="btn btn-outline-dark rounded-pill">
                            <i class="bi bi-telephone me-2"></i> Call Staff
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-8">
            <div class="card profile-card mb-3">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
                    <h5 class="card-title text-primary fw-bold"><i class="bi bi-person-lines-fill me-2"></i>Profile Information</h5>
                </div>
                <div class="card-body pt-3 px-4">

                    @if (!string.IsNullOrEmpty(Model.Remarks))
                    {
                        <div class="alert alert-light border-start border-4 border-primary mb-4" role="alert">
                            <h6 class="fw-bold text-dark">About</h6>
                            <p class="small fst-italic mb-0 text-muted">@Model.Remarks</p>
                        </div>
                    }

                    <div class="container-fluid p-0">

                        <div class="row detail-row align-items-center">
                            <div class="col-md-4 d-flex align-items-center">
                                <span class="detail-icon"><i class="bi bi-person"></i></span>
                                <span class="label-text">Full Name</span>
                            </div>
                            <div class="col-md-8 value-text">@Model.StaffName</div>
                        </div>

                        <div class="row detail-row align-items-center">
                            <div class="col-md-4 d-flex align-items-center">
                                <span class="detail-icon"><i class="bi bi-building"></i></span>
                                <span class="label-text">Department</span>
                            </div>
                            <div class="col-md-8 value-text">@Model.Department?.DepartmentName</div>
                        </div>

                        <div class="row detail-row align-items-center">
                            <div class="col-md-4 d-flex align-items-center">
                                <span class="detail-icon"><i class="bi bi-at"></i></span>
                                <span class="label-text">Email Address</span>
                            </div>
                            <div class="col-md-8 value-text">@Model.EmailAddress</div>
                        </div>

                        <div class="row detail-row align-items-center">
                            <div class="col-md-4 d-flex align-items-center">
                                <span class="detail-icon"><i class="bi bi-phone"></i></span>
                                <span class="label-text">Mobile</span>
                            </div>
                            <div class="col-md-8 value-text">@Model.MobileNo</div>
                        </div>

                        <div class="row detail-row align-items-center">
                            <div class="col-md-4 d-flex align-items-center">
                                <span class="detail-icon"><i class="bi bi-calendar-check"></i></span>
                                <span class="label-text">Joined Date</span>
                            </div>
                            <div class="col-md-8 value-text">@Model.Created.ToString("MMMM dd, yyyy")</div>
                        </div>

                        <div class="row detail-row align-items-center border-0">
                            <div class="col-md-4 d-flex align-items-center">
                                <span class="detail-icon"><i class="bi bi-clock-history"></i></span>
                                <span class="label-text">Last Updated</span>
                            </div>
                            <div class="col-md-8 value-text">@Model.Modified.ToString("MMMM dd, yyyy")</div>
                        </div>

                    </div>

                    <div class="d-flex justify-content-end mt-4 mb-2 gap-2">
                        <a asp-action="Index" class="btn btn-light border px-4">Back</a>
                        <a asp-action="Edit" asp-route-id="@Model.StaffID" class="btn btn-primary px-4 shadow-sm">
                            <i class="bi bi-pencil-square me-1"></i> Edit Profile
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>