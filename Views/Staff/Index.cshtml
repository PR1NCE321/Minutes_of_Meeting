


@model IEnumerable<MOM.Models.StaffListVM>

@{
    ViewData["Title"] = "Staff Members";
}

<style>
    .pagination .page-link {
        color: black;
    }
    .pagination .page-item.active .page-link {
        background-color: #4DA8DA;
        border-color: #4DA8DA;
        color: #fff;
    }
    .pagination .page-link:hover {
        color: #3b8cc4;
        background-color: #e9ecef;
    }

    .venue-item {
        transition: all 0.2s ease-in-out;
        border-left: 4px solid transparent;
    }

    .venue-item:hover {
        background-color: #f8fbff;
        border-left-color: #4DA8DA;
        transform: translateX(4px);
    }
</style>
<div class="container-fluid py-4">

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-1"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle me-1"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5">
        <div>
            <h1 class="fw-bold text-dark">Staff Members</h1>
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Home</a></li>
                    <li class="breadcrumb-item active">Administration</li>
                    <li class="breadcrumb-item active text-primary">Staff Members</li>
                </ol>
            </nav>
        </div>
        <div class="mt-3 mt-md-0 d-flex gap-2">
             <button class="btn btn-white border shadow-sm text-muted">
                <i class="bi bi-file-earmark-excel me-2 text-success"></i>Export
            </button>
            <a asp-action="Create" class="btn btn-primary shadow-sm px-4 rounded-pill py-2" style="background-color: #4DA8DA; border: none;">
                <i class="bi bi-plus-lg me-2"></i>Create Staff
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-pill overflow-hidden">
                <div class="card-body p-1 ps-4">
                    <form asp-action="Index" method="get" class="d-flex align-items-center">
                        <i class="bi bi-search text-muted me-3"></i>
                        <input type="text" name="SearchText" class="form-control border-0 shadow-none" placeholder="Search staff..." value="@ViewBag.CurrentSearchText" style="height: 50px;">
                        <button type="submit" class="btn btn-primary rounded-pill px-5 m-1 fw-bold" style="background-color: #4DA8DA; border: none; height: 46px;">Search</button>
                    </form>
                </div>
            </div>
             <div class="text-center mt-2">
                <small class="text-muted">Find staff by name or details</small>
            </div>
        </div>
    </div>


<div class="card shadow-sm border-0">
    <div class="card-header text-white" style="background: #4DA8DA;">
        <i class="bi bi-people me-2"></i> Staff Members List
    </div>
    <div class="card-body p-0">
         <div class="table-responsive">
            <table class="table table-hover table-sm align-middle mb-0">
                <thead class="bg-light text-secondary text-uppercase">
                    <tr>
                        <th class="ps-3 text-nowrap" style="width: 50px;"></th> 
                        <th class="text-nowrap">Staff Name</th>
                        <th class="text-nowrap">Department</th>
                        <th class="text-nowrap">Mobile</th>
                        <th class="text-nowrap">Email</th>
                        <th class="text-center text-nowrap d-none d-md-table-cell">Meetings</th>
                         <th class="text-nowrap d-none d-lg-table-cell">Created</th>
                        <th class="text-end pe-3 text-nowrap">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0" style="font-size: 0.95rem;">
                    @if (Model.Any())
                    {
                        foreach (var s in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="rounded-circle bg-info bg-opacity-10 text-info d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                                        <i class="bi bi-person-fill fs-6"></i>
                                    </div>
                                </td>
                                <td class="text-nowrap fw-bold text-dark">
                                    @s.StaffName
                                </td>
                                <td><span class="badge bg-info bg-opacity-10 text-dark border border-info border-opacity-25 rounded-pill text-nowrap fw-normal">@s.DepartmentName</span></td>
                                <td class="text-muted text-nowrap"><i class="bi bi-telephone me-2"></i>@s.MobileNo</td>
                                <td class="text-muted text-nowrap">
                                    <div class="d-inline-block text-truncate" style="max-width: 180px;" title="@s.EmailAddress">
                                        <i class="bi bi-envelope me-2"></i>@s.EmailAddress
                                    </div>
                                </td>
                                
                                <td class="text-center d-none d-md-table-cell">
                                    <span class="badge bg-primary rounded-pill px-3 py-1">@s.TotalMeetings</span> 
                                </td>

                                <td class="text-muted text-nowrap d-none d-lg-table-cell">@DateTime.Now.ToString("dd-MM-yyyy")</td>

                                <td class="text-end pe-3 text-nowrap">
                                     <a asp-action="Details" asp-route-id="@s.StaffID" class="btn btn-sm btn-light text-primary me-1" title="View"><i class="bi bi-eye"></i></a>
                                     <a asp-action="Update" asp-route-id="@s.StaffID" class="btn btn-sm btn-light text-warning me-1" title="Update"><i class="bi bi-pencil-square"></i></a>
                                    <a asp-action="Delete" asp-route-id="@s.StaffID" class="btn btn-sm btn-light text-danger" title="Delete" onclick="return confirm('Confirm?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-5">
                                <i class="bi bi-people display-4 text-light d-block mb-3"></i>
                                No Staff Members Found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
   
   <div class="card-footer bg-white py-3 border-top d-flex justify-content-between align-items-center rounded-bottom-4">
            <div class="small text-black">Showing @Model.Count() of @ViewBag.TotalRecords entries</div>
            
            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(ViewBag.CurrentPage - 1)"
                               asp-route-SearchText="@ViewBag.CurrentSearchText">Previous</a>
                        </li>

                        @for (int p = 1; p <= ViewBag.TotalPages; p++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == p ? "active" : "")">
                                    <a class="page-link" asp-action="Index" 
                                    asp-route-page="@p"
                                    asp-route-SearchText="@ViewBag.CurrentSearchText">@p</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(ViewBag.CurrentPage + 1)"
                               asp-route-SearchText="@ViewBag.CurrentSearchText">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
</div>
</div>

