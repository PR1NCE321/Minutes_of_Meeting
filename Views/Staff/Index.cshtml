


@model IEnumerable<MOM.Models.StaffListVM>

@{
    ViewData["Title"] = "Staff Members";
}

<div class="pagetitle mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Staff Members</h1>
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Master Data</li>
                    <li class="breadcrumb-item active">Staff Members</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Add Staff Member
            </a>
            <button class="btn btn-success ms-2">
                <i class="bi bi-file-earmark-excel me-1"></i> Export
            </button>
        </div>
    </div>
</div>

<!-- Search & Filters -->
<div class="card mb-4 shadow-sm border-0">
    <div class="card-body py-3">
         <form class="row g-3">
             <div class="col-md-3">
                 <select class="form-select border-0 bg-light">
                     <option>All Departments</option>
                 </select>
             </div>
             <div class="col-md-6">
                 <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" class="form-control border-start-0 ps-0 bg-light" placeholder="Search staff...">
                </div>
             </div>
             <div class="col-md-3 text-end d-flex align-items-center justify-content-end text-muted small">
                  Total: @Model.Count()
             </div>
         </form>
    </div>
</div>


<div class="card shadow-sm border-0">
    <div class="card-header text-white" style="background: linear-gradient(to right, #6366f1, #818cf8);">
        <i class="bi bi-people me-2"></i> Staff Members List
    </div>
    <div class="card-body p-0">
         <div class="table-responsive">
            <table class="table table-hover table-sm align-middle mb-0">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                        <th class="ps-3 text-nowrap" style="width: 50px;"></th> <!-- Avatar Column -->
                        <th class="text-nowrap">Staff Name</th>
                        <th class="text-nowrap">Department</th>
                        <th class="text-nowrap">Mobile</th>
                        <th class="text-nowrap">Email</th>
                        <!-- Hidden on smaller screens if really needed -->
                        <th class="text-center text-nowrap d-none d-md-table-cell">Meetings</th>
                        <th class="text-center text-nowrap d-none d-md-table-cell">Att. Rate</th>
                         <th class="text-nowrap d-none d-lg-table-cell">Created</th>
                        <th class="text-end pe-3 text-nowrap">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @if (Model.Any())
                    {
                        foreach (var s in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                        <i class="bi bi-person-fill fs-6"></i>
                                    </div>
                                </td>
                                <td class="text-nowrap fw-bold text-dark">
                                    @s.StaffName
                                </td>
                                <td><span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 rounded-pill text-nowrap">@s.DepartmentName</span></td>
                                <td class="text-muted small text-nowrap"><i class="bi bi-telephone me-1"></i>@s.MobileNo</td>
                                <td class="text-muted small text-nowrap">
                                    <div class="d-inline-block text-truncate" style="max-width: 150px;" title="@s.EmailAddress">
                                        <i class="bi bi-envelope me-1"></i>@s.EmailAddress
                                    </div>
                                </td>
                                
                                <td class="text-center d-none d-md-table-cell">
                                    <span class="badge bg-primary rounded-pill px-2">0</span> 
                                </td>
                                 <td class="text-center d-none d-md-table-cell">
                                    <span class="badge bg-success rounded-pill px-2">0%</span> 
                                </td>

                                <td class="text-muted small text-nowrap d-none d-lg-table-cell">@DateTime.Now.ToString("yyyy-MM-dd")</td>

                                <td class="text-end pe-3 text-nowrap">
                                     <a asp-action="Details" asp-route-id="@s.StaffID" class="btn btn-sm btn-light text-primary me-1" title="View"><i class="bi bi-eye"></i></a>
                                     <a asp-action="Edit" asp-route-id="@s.StaffID" class="btn btn-sm btn-light text-warning me-1" title="Edit"><i class="bi bi-pencil-square"></i></a>
                                    <a asp-action="Delete" asp-route-id="@s.StaffID" class="btn btn-sm btn-light text-danger" title="Delete" onclick="return confirm('Confirm?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-5">
                                <i class="bi bi-people display-4 text-light d-block mb-3"></i>
                                No Staff Members Found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
