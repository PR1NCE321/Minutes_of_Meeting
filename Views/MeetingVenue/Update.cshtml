@model MOM.Models.MeetingVenueModel

@{
    ViewData["Title"] = "Update Venue";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="card border-0 shadow-lg rounded-4 position-relative overflow-hidden mb-5">
                <!-- Decorative Top Border -->
                <div class="position-absolute top-0 start-0 w-100" style="height: 8px; background: linear-gradient(90deg, #4DA8DA, #79c2e8);"></div>
                
                <div class="card-body p-5">
                    
                    <div class="text-center mb-5">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-4 shadow-sm" style="width: 90px; height: 90px; background-color: #ecf8fd; color: #4DA8DA;">
                            <i class="bi bi-building-gear fs-1"></i>
                        </div>
                        <h2 class="fw-bold text-dark mb-2">Update Venue</h2>
                        <p class="text-muted">Modify the details for <strong>@Model.MeetingVenueName</strong></p>
                    </div>

                    <form asp-action="Update">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                        <input type="hidden" asp-for="MeetingVenueID" />
                        <input type="hidden" asp-for="Created" />

                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="MeetingVenueName" class="form-control border-0 bg-light fw-bold text-dark" id="floatingVenueName" placeholder="Venue Name" style="height: 60px; border-radius: 12px;">
                                <label for="floatingVenueName" class="text-muted">Venue Name</label>
                            </div>
                            <span asp-validation-for="MeetingVenueName" class="text-danger small mt-2 d-block ms-1"></span>
                        </div>

                        <div class="d-grid gap-3 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold py-3 shadow-sm" style="background-color: #4DA8DA; border-color: #4DA8DA; transition: all 0.3s;">
                                <i class="bi bi-check-circle-fill me-2"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-light btn-lg rounded-pill fw-medium text-muted py-3">
                                Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>

            <div class="text-center">
                <p class="text-muted small">
                    <i class="bi bi-info-circle me-1"></i> 
                    Updating the venue name will reflect across all scheduled meetings immediately.
                </p>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
