@model MOM.Models.MeetingVenueModel

@{
    ViewData["Title"] = "Add New Meeting Venue";
}

<div class="pagetitle mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Add New Meeting Venue</h1>
             <p class="text-muted small">Create a new meeting venue</p>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
             <div class="card-header text-white py-3" style="background: linear-gradient(to right, #6366f1, #818cf8);">
                <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i> Add New Meeting Venue</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="col-12">
                        <label asp-for="MeetingVenueName" class="form-label fw-semibold">Venue Name</label>
                            <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-geo-alt text-muted"></i></span>
                                <input asp-for="MeetingVenueName" class="form-control" placeholder="Enter meeting venue name" />
                                <span class="input-group-text text-success bg-white"><i class="bi bi-check-lg"></i></span>
                        </div>
                        <div class="form-text small text-muted">e.g. Conference Room A, Board Room, Virtual (Zoom), Auditorium</div>
                        <span asp-validation-for="MeetingVenueName" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end align-items-center mt-4 pt-2 border-top">
                         <a asp-action="Index" class="text-decoration-none text-muted me-3">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary px-4" style="background-color: #4f46e5;">
                            <i class="bi bi-check-circle me-1"></i> Create Venue
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}