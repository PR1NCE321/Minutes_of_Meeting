@model IEnumerable<MOM.Models.MeetingVenueModel>

@{
    ViewData["Title"] = "Meeting Venues";
}

<style>
    .pagination .page-link {
        color: black;
    }
    .pagination .page-item.active .page-link {
        background-color: #4DA8DA;
        border-color: #4DA8DA;
        color: #fff;
    }
    .pagination .page-link:hover {
        color: #3b8cc4;
        background-color: #e9ecef;
    }

    .venue-item {
        transition: all 0.2s ease-in-out;
        border-left: 4px solid transparent;
    }

    .venue-item:hover {
        background-color: #f8fbff;
        border-left-color: #4DA8DA;
        transform: translateX(4px);
    }
</style>

<div class="container-fluid py-4">

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-1"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle me-1"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5">
        <div>
            <h1 class="fw-bold text-dark">Meeting Venues</h1>
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Home</a></li>
                    <li class="breadcrumb-item active">Administration</li>
                    <li class="breadcrumb-item active text-primary">Meeting Venues</li>
                </ol>
            </nav>
        </div>
        <div class="mt-3 mt-md-0 d-flex gap-2">
            <button class="btn btn-white border shadow-sm text-muted">
                <i class="bi bi-file-earmark-excel me-2 text-success"></i>Export
            </button>
            <a asp-action="Create" class="btn btn-primary shadow-sm px-4 rounded-pill py-2" style="background-color: #4DA8DA; border: none;">
                <i class="bi bi-plus-lg me-2"></i>Create Venue
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-pill overflow-hidden">
                <div class="card-body p-1 ps-4">
                    <form asp-action="Index" method="get" class="d-flex align-items-center">
                        <i class="bi bi-search text-muted me-3"></i>
                        <input type="text" name="SearchText" class="form-control border-0 shadow-none" placeholder="Search venues..." value="@ViewBag.CurrentSearchText" style="height: 50px;">
                        <button type="submit" class="btn btn-primary rounded-pill px-5 m-1 fw-bold" style="background-color: #4DA8DA; border: none; height: 46px;">Search</button>
                    </form>
                </div>
            </div>
             <div class="text-center mt-2">
                <small class="text-muted">Found @ViewBag.TotalRecords active locations</small>
            </div>
        </div>
    </div>

    <!-- Venue List -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="list-group list-group-flush rounded-4">
                    @foreach (var v in Model)
                    {
                        <div class="list-group-item p-4 border-bottom venue-item">
                            <div class="row align-items-center">
                                <!-- Icon & Name -->
                                <div class="col-md-5 mb-3 mb-md-0 d-flex align-items-center">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm bg-light text-primary" style="width: 56px; height: 56px; color: #4DA8DA;">
                                        <i class="bi bi-geo-alt-fill fs-4"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold text-dark mb-0">@v.MeetingVenueName</h5>
                                        <small class="text-muted">ID: #@v.MeetingVenueID</small>
                                    </div>
                                </div>

                                <!-- Stats (Placeholder) -->
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <div class="d-flex gap-4">
                                        <div>
                                            <span class="d-block text-muted text-uppercase small fw-bold" style="font-size: 0.7rem;">Created On</span>
                                            <span class="fw-medium">@DateTime.Now.ToString("dd MMM yyyy")</span>
                                        </div>
                                        <div>
                                            <span class="d-block text-muted text-uppercase small fw-bold" style="font-size: 0.7rem;">Status</span>
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Active</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="col-md-3 text-end">
                                    <a asp-action="Details" asp-route-id="@v.MeetingVenueID" class="btn btn-icon btn-sm btn-light text-primary rounded-circle me-1" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@v.MeetingVenueID" class="btn btn-icon btn-sm btn-light text-info rounded-circle me-1" title="Update">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@v.MeetingVenueID" class="btn btn-icon btn-sm btn-light text-danger rounded-circle" title="Delete" onclick="return confirm('Are you sure you want to delete this venue?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="bi bi-geo-alt text-muted display-1 opacity-25"></i>
                    </div>
                    <h4 class="text-muted fw-bold">No Venues Found</h4>
                    <p class="text-muted mb-4">Try adjusting your search or add a new one.</p>
                </div>
            }
        </div>
        
        <!-- Pagination Footer -->
        <div class="card-footer bg-white py-3 border-top d-flex justify-content-between align-items-center rounded-bottom-4">
            <div class="small text-black">Showing @Model.Count() of @ViewBag.TotalRecords entries</div>
            
            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(ViewBag.CurrentPage - 1)"
                               asp-route-SearchText="@ViewBag.CurrentSearchText">Previous</a>
                        </li>

                        @for (int p = 1; p <= ViewBag.TotalPages; p++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == p ? "active" : "")">
                                    <a class="page-link" asp-action="Index" 
                                    asp-route-page="@p"
                                    asp-route-SearchText="@ViewBag.CurrentSearchText">@p</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(ViewBag.CurrentPage + 1)"
                               asp-route-SearchText="@ViewBag.CurrentSearchText">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>

</div>