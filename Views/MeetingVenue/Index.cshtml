

@model IEnumerable<MOM.Models.MeetingVenueModel>

@{
    ViewData["Title"] = "Meeting Venues";
}

<div class="pagetitle mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Meeting Venues</h1>
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Master Data</li>
                    <li class="breadcrumb-item active">Meeting Venues</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Add Venue
            </a>
            <button class="btn btn-success ms-2">
                <i class="bi bi-file-earmark-excel me-1"></i> Export
            </button>
        </div>
    </div>
</div>

<!-- Search Bar -->
<div class="card mb-4 shadow-sm border-0">
    <div class="card-body py-3">
        <div class="row align-items-center">
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" class="form-control border-start-0 ps-0" placeholder="Search venues...">
                </div>
            </div>
             <div class="col-md-2 text-end text-muted small">
                Total Venues: @Model.Count()
            </div>
        </div>
    </div>
</div>

<!-- Venues Grid -->
<div class="row g-4">
    @if (Model.Any())
    {
        @foreach (var v in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header text-white d-flex justify-content-between align-items-center" style="background: linear-gradient(to right, #6366f1, #818cf8);">
                        <div>
                            <h5 class="card-title text-white mb-0" style="font-size: 1.1rem;">@v.MeetingVenueName</h5>
                            <small class="opacity-75"><i class="bi bi-geo-alt me-1"></i>Venue ID #@v.MeetingVenueID</small>
                        </div>
                        <div>
                             <a asp-action="Details" asp-route-id="@v.MeetingVenueID" class="text-white opacity-75 hover-opacity-100 me-2"><i class="bi bi-eye"></i></a>
                             <a asp-action="Update" asp-route-id="@v.MeetingVenueID" class="text-white opacity-75 hover-opacity-100 me-2"><i class="bi bi-pencil"></i></a>
                             <a asp-action="Delete" asp-route-id="@v.MeetingVenueID" class="text-white opacity-75 hover-opacity-100" onclick="return confirm('Delete this venue?')"><i class="bi bi-trash"></i></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row text-center mb-3 mt-2">
                            <div class="col-6 border-end">
                                <h3 class="fw-bold mb-0 text-primary">0</h3>
                                <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Total Meetings</small>
                            </div>
                            <div class="col-6">
                                <h3 class="fw-bold mb-0 text-success">0</h3>
                                <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Upcoming</small>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between small text-muted mb-1">
                                <span>Utilization Rate</span>
                                <span>0.0% UTILIZATION</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary btn-sm"><i class="bi bi-calendar-week me-1"></i> View Schedule</button>
                            <a asp-controller="Meetings" asp-action="Create" class="btn btn-success btn-sm"><i class="bi bi-plus-circle me-1"></i> Schedule Meeting</a>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0 d-flex justify-content-between small text-muted">
                        <span>Created</span>
                        <span>@DateTime.Now.ToString("yyyy-MM-dd")</span> 
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center py-5 text-muted">
            <i class="bi bi-geo-alt display-1 text-light"></i>
            <p class="mt-3">No venues found. Click "Add Venue" to create one.</p>
        </div>
    }
</div>
